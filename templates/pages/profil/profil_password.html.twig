{% extends 'base.html.twig' %}

{% block title %}Edit{% endblock %}

{% block body %}

{{ form_start(form) }}

    <h2>Edit password</h2>

    {% for message in app.flashes('warning') %}
        <div class="warning-flash">
            <p class="padding-bottom-none bold">{{ message }}</p>
            {{ form_errors(form.plainPassword) }}
        </div>
    {% endfor %}    

    <div class="none pass-verif warning-flash">
        <p class="none pass-verif padding-bottom-none bold">Complete the following step and try again.</p>
        <ul class="none pass-verif">
            <li class="none pass-verif pass-verif-msg"></li>
        </ul>
    </div>

    <div>
        {{ form_label(form.plainPassword) }}
        {{ form_widget(form.plainPassword) }}
    </div>

    <div class="form-last-div-space">
        <label for="verif_pass" class="required">Comfirm password</label>
        <input type="password" id="profil_verif_pass" name="register_verif_pass" required="required" minlength="5" maxlength="30">
    </div>

    <div>
        {{ form_label(form.submit) }}
        {{ form_widget(form.submit) }}
    </div>

{{ form_end(form) }}

{% endblock %}