{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<section>
    <p>LoliSSR find your favorite waifu !</p>
    <p>Currently on page 1.</p>
</section>

{% set compteur = 0 %}
{# {% set last = images.getTotalItemCount %} #}

{% for image in images %}

    {% if compteur == 0 %}

    <div id="row-images">

    {% endif %}

        <div id="show-images">
            <img src="{{ asset('assets/images/loli/' ~ image.name)}}" alt="{{ image.name }}">
            <p>{{ image.createdAt|date('d/m/Y') }}</p>
            <p>List Type : {{ image.type }}</p>
            <p>Gender : {{ image.gender }}</p>
        </div>

    {% set compteur = compteur + 1 %}

    {% if (compteur % 4 == 0) %}

        {% set compteur = 0 %}

        </div>

    {% endif %}

{% endfor %}

<div class="navigation">
    {{ knp_pagination_render(images, 'pages/paginate/link.html.twig') }}
</div>

{% endblock %}